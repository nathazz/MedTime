<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:statusBarColor">@color/azul_escuro</item>
    </style>


    <!--- style agendamentos -->

    <style name="titulos_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">85dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/verde_clr</item>
        <item name="android:textSize">23sp</item>
        <item  name="android:textStyle">bold</item>
    </style>

    <style name="editar">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">240dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/azul_btn</item>
    </style>

    <style name="apagar">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">240dp</item>
        <item name="android:layout_marginTop">45dp</item>
        <item name="android:background">@color/azul_btn</item>
    </style>

    <style name="foto_med">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">45dp</item>
    </style>

    <style name="card_agnd">
       <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:backgroundTint">@color/azul_btn</item>

    </style>



    <!--- Style main-->
    <style name="card_main">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">95dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:backgroundTint">@color/azul_btn</item>
    </style>


    <style name="quant_dia">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="btn_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_marginLeft">45dp</item>
        <item name="android:layout_marginRight">45dp</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--- Style Cadastro-->
    <style name="snipper_custom">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="elevation">5dp</item>
        <item name="android:layout_marginHorizontal">70dp</item>
    </style>

    <style name="edt_cadastro">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginHorizontal">70dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/bg_dosagem</item>
        <item name="elevation">5dp</item>
        <item name="android:textColorHint">#D6000000</item>
    </style>

    <style name="btn_cadastro">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_marginHorizontal">80dp</item>
        <item name="android:background">@drawable/bg_btncadastro</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>

    </style>



</resources>