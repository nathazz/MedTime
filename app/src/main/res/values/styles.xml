<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:statusBarColor">@color/azul_escuro</item>
    </style>
    
    <style name="card_agnd">
       <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">125dp</item>
        <item name="android:backgroundTint">@color/azul_btn</item>
        <item name="android:layout_margin">20dp</item>
    </style>

    <style name="card_main">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">95dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:backgroundTint">@color/azul_btn</item>
    </style>


    <style name="titulos_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">85dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/verde_clr</item>
        <item name="android:textSize">24sp</item>
        <item  name="android:textStyle">bold</item>
    </style>

    <style name="editar">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">255dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/azul_btn</item>
    </style>

    <style name="apagar">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">255dp</item>
        <item name="android:layout_marginTop">45dp</item>
        <item name="android:background">@color/azul_btn</item>
    </style>

    <style name="foto_med">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">43dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">45dp</item>
    </style>

    <style name="quantDia">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="btn_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>



</resources>