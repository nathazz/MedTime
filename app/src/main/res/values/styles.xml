<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:statusBarColor">@color/azul_escuro</item>
    </style>
    
    <style name="card">
       <item name="android:layout_width">367dp</item>
        <item name="android:layout_height">151dp</item>
        <item name="android:backgroundTint">@color/azul_btn</item>
    </style>

    <style name="titulos_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">105dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textColor">@color/verde_clr</item>
        <item name="android:textSize">28sp</item>
        <item  name="android:textStyle">bold</item>
    </style>

    <style name="editar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">310dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/azul_btn</item>
    </style>

    <style name="apagar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginStart">310dp</item>
        <item name="android:layout_marginTop">65dp</item>
        <item name="android:background">@color/azul_btn</item>
    </style>

    <style name="foto_med">
        <item name="android:layout_width">68dp</item>
        <item name="android:layout_height">59dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">45dp</item>
    </style>




</resources>