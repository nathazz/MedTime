<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_btncadastro"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="30dp"
    android:layout_height="140dp">


    <ImageView
        android:id="@+id/fotoGota"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/gotas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titulo_med"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="16dp"
        android:letterSpacing="0.1"
        android:text="ColÃ­rio"
        android:textColor="@color/verde_clr"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/fotoGota"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dosagemMed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="115dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:text="2x por dia"
        android:textSize="16sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fotoGota"
        app:layout_constraintTop_toBottomOf="@+id/titulo_med" />

    <TextView
        android:id="@+id/dataMed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:textSize="18sp"
        android:text="26 Jun - 28 Aug"
        android:layout_marginTop="5dp"
        android:textColor="@color/azul_clr"
        app:layout_constraintStart_toEndOf="@+id/fotoGota"
        app:layout_constraintTop_toBottomOf="@+id/dosagemMed" />




    <ImageButton
        android:id="@+id/editarMed"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:background="@color/azul_btn"
        android:contentDescription="null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/edit2" />

    <ImageButton
        android:id="@+id/deletarMed"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:background="@color/azul_btn"
        android:contentDescription="null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/dataMed"
        app:srcCompat="@drawable/lixo2" />


</androidx.constraintlayout.widget.ConstraintLayout>